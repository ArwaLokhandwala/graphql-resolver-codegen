{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "JSON schema for graphqlgen.yml files",
  "properties": {
    "input": {
      "description": "All input fields",
      "type": "object",
      "properties": {
        "schema": {
          "type": "string"
        },
        "context": {
          "type": "string"
        },
        "models": {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z0-9]*$": {
              "type": "string"
            }
          }
        }
      },
      "required": ["schema", "context", "models"],
      "additionalProperties": false
    },
    "output": {
      "description": "All output fields",
      "type": "object",
      "properties": {
        "types": {
          "type": "string",
          "description": "Path to main output file"
        },
        "models": {
          "type": "string",
          "description": "Path to scaffolded file for missing model definitions"
        },
        "resolvers": {
          "type": "string",
          "description": "Path to scaffolded resolver file"
        }
      },
      "required": ["types"],
      "additionalProperties": false
    }
  },
  "required": ["input"],
  "additionalProperties": false
}
